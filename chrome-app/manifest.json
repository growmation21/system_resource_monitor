{
  "manifest_version": 2,
  "name": "System Resource Monitor",
  "short_name": "SysMonitor",
  "version": "1.0.0",
  "description": "Real-time system resource monitoring with always-on-top display",
  
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  
  "permissions": [
    "webview",
    "alwaysOnTopWindows",
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display"
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "minimum_chrome_version": "38",
  
  "kiosk_enabled": false,
  "offline_enabled": false
}
